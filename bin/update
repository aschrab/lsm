#!/usr/bin/zsh
set -x

setopt Null_Glob Extended_Glob

cd ~lsm

path=( ~lsm/bin $path )

if [ "$1" = "-t" ]
then
        e=echo
else
        e=""
fi

cd ~lsm

td=$(date +%Y-%m-%d)
yd=$(date -d yesterday +%Y-%m-%d)
ud="updates/lsm.${yd}"

if [ "$1" = "-t" ]; then
	#echo "Update=$ud"
	ls -l $ud
fi

set -e

if [ -r $ud ]
then
	${e} ./ruby_lsm/apply_updates.rb $ud ftp/LSM.current LSM.$td
        ${e} chmod 0644 $ud LSM.$td

        ${e} gzip --rsyncable -9 < LSM.${td} > LSM.${td}.gz
        ${e} chmod 0644 LSM.${td}.gz

        ${e} mv LSM.$td ftp/
        ${e} mv LSM.${td}.gz ftp/
        ${e} mv $ud ftp/updates/

        #${e} mv LSM.new www/LSM
        #${e} rm -f ftp/LSM.current
        #${e} rm -f ftp/LSM.current.gz

        ${e} ln -sf LSM.$td ftp/LSM.current
        ${e} ln -sf LSM.${td}.gz ftp/LSM.current.gz

        #${e} rm -f ftp/LSM.[0-9]*(m+2)
        #${e} rm -f ftp/updates/lsm.*(m+8)
        ${e} rm -f ftp/LSM.[0-9]*~*.gz(om[4,-1])
        ${e} rm -f ftp/LSM.[0-9]*.gz(om[4,-1])
        ${e} rm -f ftp/updates/lsm.*(om[8,-1])
fi
